# main.py
import tkinter as tk
from tkinter import ttk
from excel_reader import process_excel_data
from technical_comparison import compare_technologies

class MainApplication:
    def __init__(self, root):
        self.root = root
        self.root.title("Technology Comparison Tool")
        self.root.geometry("400x300")
        
        # Welcome label
        welcome_label = ttk.Label(root, text="Welcome to the Script", font=("Arial", 16))
        welcome_label.pack(pady=20)
        
        # Buttons
        ttk.Button(root, text="Run Compare Everything", 
                  command=self.run_complete_comparison).pack(pady=10)
        ttk.Button(root, text="Compare 2 Technologies Coupling", 
                  command=self.compare_two_technologies).pack(pady=10)
        ttk.Button(root, text="Compare 2 Projects", 
                  command=self.compare_two_projects).pack(pady=10)
        ttk.Button(root, text="Give H2 Output Value", 
                  command=self.get_h2_output).pack(pady=10)

    def run_complete_comparison(self):
        # First, read all Excel files
        excel_data = process_excel_data()
        # Then, perform technical comparison
        compare_technologies(excel_data)

    def compare_two_technologies(self):
